@model List<SAEcommerceApp.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>SAEcommerceApp - Products</h1>
    <a href="/Cart" class="btn btn-primary">🛒 Cart</a>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p>@product.Description</p>
                    <p><b>Price:</b> ₹@product.Price</p>
                    <p><b>Rating:</b> @product.Rating ⭐</p>
                    <p><b>Features:</b> @product.Features</p>
                    <a href="/Cart/AddToCart/@product.Id" class="btn btn-success mt-auto">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>
